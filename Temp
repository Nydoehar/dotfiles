apt install samba && mv /etc/samba/smb.conf /etc/samba/smb.conf.bak && touch /etc/samba/smb.conf && systemctl stop smbd && printf '[global]\nserver string = File Server\nworkgroup = Samba_workgroup\nsecurity = user\nmap to guest = Bad User\nname resolve order = bcast host\ninclude = /etc/samba/shares.conf' >> /etc/samba/smb.conf && printf '[Public Files]\npath = /media/yann/Ventoy/STORAGE\nforce user = smbuser\nforce group = share_group\ncreate mask = 0664\nforce create mode = 0664\ndirectory mask = 0775\nforce directory mode = 0775\npublic = yes\nwritable = yes' >> /etc/samba/shares.conf && groupadd -g 1000 share_group && chgrp share_group /media/yann/Ventoy/STORAGE && chmod g+w /media/yann/Ventoy/STORAGE && useradd --system --no-create-home --group share_group -s /bin/false smbuser && usermod -aG share_group smbuser && systemctl start smbd 
